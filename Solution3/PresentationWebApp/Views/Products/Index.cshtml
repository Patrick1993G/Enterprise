@model IEnumerable<ShoppingCart.Application.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Products Catalogue</h1>
<div class="container">
    <div class="row">
        <div class="col-6">
            @Html.Partial("SearchPartial")
        </div>
        @Html.Partial("ViewFilterByCategoriesPartial")
    </div>
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Product</a>
</p>

<div class="container">
    <div class="row">
        @Html.Partial("ViewProductsPartial", Model)
    </div>
</div>

<div>

    @Html.Partial("ViewPaginatorPartial", Model)
</div>

